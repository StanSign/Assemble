# Uncomment the next line to define a global platform for your project
 platform :ios, '13.0'

target 'Assemble' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  inhibit_all_warnings!

  # Pods for Assemble
  # Rx
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxDataSources'
  
  # Alamofire
  pod 'Alamofire'
  pod 'RxAlamofire'

  # Indicator
  pod 'NVActivityIndicatorView'
  pod 'CHIPageControl'

  # UI
  pod 'SnapKit'
  pod 'Kingfisher'
  pod 'lottie-ios'
  pod 'Hero'

  # Local DB
  pod 'RealmSwift'
  
  target 'AssembleUseCaseTests' do
    inhibit_all_warnings!
    pod 'RxTest'
    pod 'RxNimble'
  end
end
